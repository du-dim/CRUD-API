{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "esModuleInterop": true,
    "outDir": "./build",
    "rootDir": "./src",
    "moduleResolution": "node",
    "allowJs": true,
    "removeComments": true, 
    "strict": true,
    "noImplicitAny": true,
    
  },  
  "exclude": ["node_modules", "./build"],
  "ts-node": {
    "esm": true
  }
}
